            android:gravity="center_horizontal"/>
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Health "
            android:textColor="@color/white"
            android:padding="5sp"
            android:textSize="14sp"
            android:layout_weight = "4"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/profile_no_of_healthL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:padding="5sp"
            android:textSize="14sp"
            android:layout_weight = "4"
            android:gravity="center_horizontal"/>

    </TableRow>
    <TableRow>
        <TextView
